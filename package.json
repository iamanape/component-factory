{
  "name": "react-classy",
  "version": "0.1.0",
  "description": "A tiny utility for building organized shorthand React components with Tailwind and clsx.",
  "keywords": [
    "react",
    "tailwind",
    "clsx",
    "components",
    "utility"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://example.com/react-classy.git"
  },
  "bugs": {
    "url": "https://example.com/react-classy/issues"
  },
  "homepage": "https://example.com/react-classy#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "lint": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "tsup": "^7.2.0",
    "typescript": "^5.4.5"
  }
}
